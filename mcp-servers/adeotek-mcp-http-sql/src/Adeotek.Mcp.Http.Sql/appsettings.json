{
  "AllowedHosts": "*",
  "RedirectToHttps": false,
  "DatabaseServer": {
    "type": "",
    "ConnectionString": "",
    "MaxRetries": 3,
    "ConnectionTimeoutSeconds": 30,
    "CommandTimeoutSeconds": 60,
    "UseSsl": true,
    "MaxPoolSize": 100,
    "MinPoolSize": 0,
    "LogQueries": true,
    "LogResults": false
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".logs/postgres-mcp-.log",
          "rollingInterval": "day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Adeotek.AI.Tools",
      "Service": "Adeotek.Mcp.Http.Sql"
    }
  }
}
