# PostgreSQL Natural Language MCP Server Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL Configuration
Postgres__DefaultConnectionString=Host=postgres;Port=5432;Database=testdb;Username=postgres;Password=password;SSL Mode=Prefer

# AI Configuration
# Choose your LLM provider: openai, anthropic, gemini, ollama, lmstudio, azureopenai
Ai__Provider=openai
Ai__Enabled=true
Ai__MaxTokens=2000
Ai__Temperature=0.1

# OpenAI Configuration (default provider)
OPENAI_API_KEY=sk-your-openai-api-key-here
Ai__ApiKey=${OPENAI_API_KEY}
Ai__Model=gpt-4

# Anthropic Claude Configuration (alternative)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
# Ai__Provider=anthropic
# Ai__ApiKey=${ANTHROPIC_API_KEY}
# Ai__Model=claude-3-5-sonnet-20241022

# Google Gemini Configuration (alternative)
# GEMINI_API_KEY=AIza-your-gemini-api-key-here
# Ai__Provider=gemini
# Ai__ApiKey=${GEMINI_API_KEY}
# Ai__Model=gemini-1.5-pro

# Azure OpenAI Configuration (alternative)
# Ai__Provider=azureopenai
# Ai__AzureEndpoint=https://your-resource.openai.azure.com
# Ai__AzureDeploymentName=gpt-4
# Ai__ApiKey=your-azure-openai-key

# Ollama Configuration (local LLM, alternative)
# Ai__Provider=ollama
# Ai__Model=llama3
# Ai__BaseUrl=http://localhost:11434

# LM Studio Configuration (local LLM, alternative)
# Ai__Provider=lmstudio
# Ai__Model=local-model
# Ai__BaseUrl=http://localhost:1234

# Security Settings
Security__EnableRateLimiting=false
Security__RequestsPerMinute=60
Security__MaxRowsPerQuery=1000
Security__MaxQueryExecutionSeconds=30
Security__AllowDataModification=false
Security__AllowSchemaModification=false

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogQueries=true
Logging__LogResults=false
Logging__LogAiInteractions=true

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# PostgreSQL Database Configuration (for docker-compose testing)
POSTGRES_DB=testdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# pgAdmin Configuration (for docker-compose testing)
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_CONFIG_SERVER_MODE=False
