{
  "AllowedHosts": "*",
  "RedirectToHttps": false,
  "Postgres": {
    "DefaultConnectionString": null,
    "MaxRetries": 3,
    "ConnectionTimeoutSeconds": 30,
    "CommandTimeoutSeconds": 60,
    "UseSsl": true,
    "MaxPoolSize": 100,
    "MinPoolSize": 0
  },
  "Security": {
    "EnableRateLimiting": true,
    "RequestsPerMinute": 60,
    "AllowedSchemas": [],
    "BlockedSchemas": [
      "pg_catalog",
      "information_schema"
    ],
    "BlockedTables": [],
    "MaxRowsPerQuery": 10000,
    "MaxQueryExecutionSeconds": 30
  },
  "McpLogging": {
    "LogQueries": true,
    "LogResults": false
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": ".logs/postgres-mcp-.log",
          "rollingInterval": "day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Adeotek.AI.Tools",
      "Service": "Adeotek.PostgresMcp"
    }
  }
}
