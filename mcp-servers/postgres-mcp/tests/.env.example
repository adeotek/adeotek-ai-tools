# PostgreSQL MCP Server Environment Variables (Read-Only Mode)
# Copy this file to .env and fill in your values

# PostgreSQL Configuration
Postgres__DefaultConnectionString=Host=postgres;Port=5432;Database=testdb;Username=postgres;Password=password;SSL Mode=Prefer

# Security Settings
Security__EnableRateLimiting=false
Security__RequestsPerMinute=60
Security__MaxRowsPerQuery=1000
Security__MaxQueryExecutionSeconds=30

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogQueries=true
Logging__LogResults=false

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000

# PostgreSQL Database Configuration (for docker-compose testing)
POSTGRES_DB=testdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# pgAdmin Configuration (for docker-compose testing)
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=admin
PGADMIN_CONFIG_SERVER_MODE=False
