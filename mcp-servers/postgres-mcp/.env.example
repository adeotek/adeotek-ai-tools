# PostgreSQL MCP Server Environment Variables (Read-Only Mode)
# Copy this file to .env and fill in your values

# PostgreSQL Connection
# Connection string to the PostgreSQL server instance
# The database name in the connection string is the default, but tools can access any database on the server
Postgres__ConnectionString=Host=localhost;Port=5432;Username=postgres;Password=yourpassword;Database=postgres

# Security Settings
Security__EnableRateLimiting=false
Security__RequestsPerMinute=60
Security__MaxRowsPerQuery=1000
Security__MaxQueryExecutionSeconds=30

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogQueries=true
Logging__LogResults=false

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
