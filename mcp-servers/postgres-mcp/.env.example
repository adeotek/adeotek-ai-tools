# PostgreSQL MCP Server Environment Variables (Read-Only Mode)
# Copy this file to .env and fill in your values

# PostgreSQL Connection String (optional - can also configure at runtime via MCP initialize)
# Format: Host=localhost;Port=5432;Username=postgres;Password=yourpassword
# Note: Database parameter is optional - the server can connect to any database on this PostgreSQL instance
# Postgres__ConnectionString=Host=localhost;Port=5432;Username=postgres;Password=yourpassword

# Security Settings
Security__EnableRateLimiting=false
Security__RequestsPerMinute=60
Security__MaxRowsPerQuery=1000
Security__MaxQueryExecutionSeconds=30

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft__AspNetCore=Warning
Logging__LogQueries=true
Logging__LogResults=false

# ASP.NET Core
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
