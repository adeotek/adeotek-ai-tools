# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# .NET C# files
[*.cs]
indent_size = 4

# .NET project files
[*.{xml,csproj,vbproj,vcxproj,proj,projitems,shproj}]
indent_size = 2

# .NET config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
indent_size = 2

# Python files
[*.py]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# HTML/CSS files
[*.{html,css,scss,sass}]
indent_size = 2

# Configuration files
[*.{toml,ini,conf}]
indent_size = 2

# Git config files
[.gitattributes]
indent_size = 2

[.gitignore]
indent_size = 2

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf
